{
  "name": "subjecto",
  "version": "0.0.57",
  "description": "A minimalistic state management library",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "prepare": "if [ -d 'dist' ]; then rm -rf dist && npm run build; fi",
    "watch": "tsc --watch",
    "build": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "eslint",
    "docs:generate": "typedoc --out docs/api src/index.ts"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "(/src/__tests__/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/subject.ts",
      "**/src/inspect.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "github.com/paulbrie/subjecto"
  },
  "keywords": [
    "state",
    "management",
    "subscribe",
    "data",
    "store"
  ],
  "author": "Paul Brie",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/jest": "^29.5.14",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.28.5",
    "typedoc-plugin-markdown": "^4.6.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0"
  }
}
