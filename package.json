{
  "name": "subjecto",
  "version": "0.0.55",
  "description": "A minimalistic state management library",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "prepare": "if [ -d 'dist' ]; then rm -rf dist && npm run build; fi",
    "watch": "tsc --watch",
    "build": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
    "test": "jest"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "(/src/__tests__/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/subject.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "github.com/paulbrie/subjecto"
  },
  "keywords": [
    "state",
    "management",
    "subscribe",
    "data",
    "store"
  ],
  "author": "Paul Brie",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  }
}
